{
  "version": 2,
  "buildCommand": "cd frontend && npm ci && npm run build",
  "outputDirectory": "frontend/dist",
  "env": {
    "VITE_API_URL": "@vite_api_url",
    "VITE_FRONTEND_URL": "@vite_frontend_url",
    "VITE_GEMINI_KEY": "@vite_gemini_key"
  },
  "routes": [
    {
      "src": "^/api/(.*)",
      "dest": "https://your-backend-url/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
