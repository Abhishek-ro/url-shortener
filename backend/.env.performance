# Performance Optimized Environment Variables
# Copy to .env and adjust values based on your deployment

# Database - WITH OPTIMIZED CONNECTION POOLING
# For production, add ?connection_limit=20&pool_timeout=0
DATABASE_URL="postgresql://user:password@localhost:5432/boltlink?connection_limit=20&pool_timeout=0&statement_cache_size=0"

# Redis - Critical for rate limiting and caching
REDIS_URL="redis://localhost:6379"

# Web Concurrency - Set to number of CPU cores (or 'max' for PM2 to auto-detect)
WEB_CONCURRENCY=4

# Frontend URL for redirects
FRONTEND_URL="https://yourdomain.com"

# Allowed Origins for CORS
ALLOWED_ORIGINS="https://yourdomain.com,https://www.yourdomain.com"

# Node environment
NODE_ENV="production"

# API Key for services
JWT_SECRET="your-secret-key-here"
